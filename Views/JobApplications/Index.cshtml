@model IEnumerable<CareerHub.Models.JobApplication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CVPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverLetterPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmitedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Candidate.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPosition.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverLetterPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmitedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
