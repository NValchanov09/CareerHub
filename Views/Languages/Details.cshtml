@model CareerHub.Models.Language

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="~/css/crud_common.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/details.css" rel="stylesheet" asp-append-version="true">
</head>

<body>

    <div class="page-container">
        <div class="page-header">
            <h2>
                <i class="fas fa-eye"></i>
                Details
            </h2>
        </div>

        <div class="page-content">
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Back to Languages List
            </a>

            <div class="details-container">
                <div class="details-row">
                    <div class="details-label">
                        @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="details-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="details-row">
                    <div class="details-label">
                        Logo
                    </div>
                    <div class="details-value">
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="@Model.LogoPath" alt="@Model.Name Logo" width="100" />
                        }   
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary-custom">
                    <i class="fas fa-save me-2"></i>
                    <span>Edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-custom">
                    <i class="fas fa-times me-2"></i>
                    <span>Delete</span>
                </a>
            </div>
        </div>
    </div>
</body>