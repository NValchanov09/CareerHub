@model CareerHub.Models.Language

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="~/css/crud_common.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/delete.css" rel="stylesheet" asp-append-version="true">
</head>

<body>

    <div class="page-container">
        <div class="page-header">
            <h2>
                <i class="fas fa-eye"></i>
                Details
            </h2>
        </div>

        <div class="page-content">
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Back to Languages List
            </a>

            <div class="delete-warning text-center">
                <i class="fas fa-exclamation-triangle warning-icon"></i>
                <h4>Are you sure you want to delete this language?</h4>
                <p>This action cannot be undone. All data associated with this language will be permanently removed.</p>
            </div>

            <div class="details-container">
                <div class="details-row">
                    <div class="details-label">
                        @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="details-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="details-row">
                    <div class="details-label">
                        Logo
                    </div>
                    <div class="details-value">
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="@Model.LogoPath" alt="@Model.Name Logo" width="100" />
                        }
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger-custom"> 
                        <i class="fas fa-save me-2"></i>
                        <span>Delete</span>
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary-custom">
                    <i class="fas fa-times me-2"></i>
                    <span>Cancel</span>
                </a>
            </div>
        </div>
    </div>
</body>