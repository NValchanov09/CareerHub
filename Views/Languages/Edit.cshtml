@model CareerHub.Models.Language

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link href="~/css/crud_common.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/edit.css" rel="stylesheet" asp-append-version="true">
</head>

<body>
    <div class="page-container">
        <div class="page-header">
            <h2>
                <i class="fas fa-edit"></i>
                Edit
            </h2>
        </div>
        <div class="page-content">
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Back to Languages List
            </a>

            <form class="createForm" asp-action="Edit" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" value="@Model.Name"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LogoPath" class="form-label">Upload Logo</label>
                            <input type="file" name="logoFile" class="form-control" accept="image/png, image/jpeg, image/jpg, image/bmp" />
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-success-custom">
                        <i class="fas fa-save me-2"></i>
                        <span>Update Language</span>
                    </button>
                    <a asp-action="Index" class="btn btn-danger-custom">
                        <i class="fas fa-times me-2"></i>
                        <span>Cancel</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
